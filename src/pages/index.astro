---
import BaseLayout from "../layouts/BaseLayout.astro";
import Button from "../components/Button.astro";
import ContactIcon from "../components/ContactIcon.astro";
---

<BaseLayout
  title="Uduma Idika | AI & Data Scientist"
  description="AI & Data Scientist specializing in Machine Learning, Generative AI, and applied research."
>
  <section class="pt-36 pb-32 px-6 max-w-6xl mx-auto animate-fade-in">

    <!-- HERO -->
    <div class="text-center mb-28">

      <!-- Headshot -->
      <img
        src="/images/uduma.png"
        alt="Uduma Idika"
        class="w-44 h-44 mx-auto rounded-full object-cover shadow-xl mb-8"
      />

      <!-- Title -->
      <h1 class="text-4xl md:text-5xl font-bold leading-tight mb-6">
        AI & Data Scientist
      </h1>

      <!-- Subtitle -->
      <p class="text-lg md:text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto mb-10">
        I design and build data-driven and AI-powered systems that transform
        complex data into reliable insights, scalable solutions, and
        decision-support tools with real-world impact.
      </p>

      <!-- Primary CTAs -->
      <div class="flex flex-wrap justify-center gap-6">
        <Button href="/projects">View Projects</Button>
        <Button href="/about" variant="secondary">About Me</Button>
      </div>
    </div>

    <!-- ABOUT TEASER -->
    <div class="max-w-4xl mx-auto text-center">

      <h2 class="text-3xl font-semibold mb-6">
        Turning data into decisions
      </h2>

      <p class="text-gray-600 dark:text-gray-300 text-lg leading-relaxed max-w-3xl mx-auto mb-10">
        I work at the intersection of machine learning, data engineering, and
        applied research. My focus is on building systems that are not only
        technically sound, but interpretable, scalable, and aligned with
        real business and societal needs.
      </p>

      <Button href="/about" variant="secondary">
        Read the full story â†’
      </Button>
    </div>
	
	<!-- CONTACT -->
	<div class="mt-24 text-center">
	  <p class="text-sm uppercase tracking-widest text-gray-500 dark:text-gray-400 mb-6">
		Get in touch
	  </p>

	  <div class="flex justify-center gap-7 mt-8">

		<!-- Email -->
		<ContactIcon href="mailto:mail.idika@gmail.com" label="Email">
		  
		  <svg
			 xmlns="http://www.w3.org/2000/svg"
			 width="20"
			 height="20"
			 viewBox="0 0 24 24"
			 fill="none"
			 stroke="currentColor"
			 stroke-width="1.5"
			 stroke-linecap="round"
			 stroke-linejoin="round"
		  >
			 <rect width="20" height="16" x="2" y="4" rx="2" />
			 <path d="m22 6-10 7L2 6" />
		  </svg>

		  
		</ContactIcon>

		<!-- LinkedIn -->
		<ContactIcon
		  href="https://www.linkedin.com/in/uduma-idika"
		  label="LinkedIn"
		>
		  <svg
		  xmlns="http://www.w3.org/2000/svg"
		  width="20"
		  height="20"
		  viewBox="0 0 24 24"
		  fill="none"
		  stroke="currentColor"
		  stroke-width="1.5"
		  stroke-linecap="round"
		  stroke-linejoin="round"
		>
		  <path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-4 0v7h-4v-7a6 6 0 0 1 6-6z" />
		  <rect width="4" height="12" x="2" y="9" />
		  <circle cx="4" cy="4" r="2" />
		</svg>

		</ContactIcon>

	  </div>
	</div>

  </section>
</BaseLayout>
