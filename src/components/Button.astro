---
const { href, variant = "primary" } = Astro.props;

const base =
  "inline-flex items-center justify-center px-6 py-3 rounded-md font-medium transition-all duration-200";

const variants = {
  primary:
    "bg-accent-600 text-white hover:bg-accent-700 shadow-sm hover:shadow-md",
  secondary:
    "border border-accent-600 text-accent-600 hover:bg-accent-600 hover:text-white",
  ghost:
    "text-accent-600 hover:underline",
};

const classes = `${base} ${variants[variant]}`;
---

<a href={href} class={classes}>
  <slot />
</a>
